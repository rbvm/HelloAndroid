<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.helloandroid.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/udacity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="24sp"
        android:textColor="#3e2723"
        android:text="Imagine your future!"
        />

    <TextView
        android:id="@+id/adress_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="16dp"
        android:paddingBottom="24dp"
        android:paddingTop="12dp"
        android:text="2465 Latham St, Mountain View, CA 94043"
        android:textSize="16sp"
        android:textColor="#3e2723"
        />

    <TextView
        android:id="@+id/web_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adress_text_view"
        android:layout_alignParentRight="true"
        android:paddingBottom="12dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:text="www.udacity.com"
        android:textSize="18sp"
        android:textColor="#3e2723"
        />

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/web_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="12dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:text="650-555-5555"
        android:textColor="#3e2723"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/udacity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="24dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:text="Udacity"
        android:textColor="#3e2723"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/phone_image_view"
        android:src="@drawable/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/web_image_view"
        android:layout_alignParentLeft="true"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        />

    <ImageView
        android:id="@+id/web_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/web"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:layout_above="@+id/map_image_view"
        />

    <ImageView
        android:id="@+id/map_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pin"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        />

</RelativeLayout>
